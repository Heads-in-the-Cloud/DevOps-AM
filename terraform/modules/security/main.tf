
################
# Bastion Host #
################

resource "aws_security_group" "bastion_security" {
  name = "${var.environment_name}-bastion-security"
  description = "Allow only SSH"
  vpc_id = var.vpc_id

  ingress {
    from_port = 22
    to_port = 22
    protocol = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port = 0
    to_port = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.environment_name}-bastion-security"
  }
}

